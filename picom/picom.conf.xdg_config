# backend etc
backend = "glx";
vsync = true;

glx-no-stencil = true;
glx-no-rebind-pixmap = true;

# transparency/blur
blur-background = true;
blur-kern = "5x5gaussian";

# shadow
shadow = false;

# misc
mark-wmwin-focused = true;
mark-ovredir-focues = true;
detect-rounded-corners = true;
detect-client-opacity = true;
dbe = false;

blur-background-exclude = [
	"class_g = 'slop'"
]
